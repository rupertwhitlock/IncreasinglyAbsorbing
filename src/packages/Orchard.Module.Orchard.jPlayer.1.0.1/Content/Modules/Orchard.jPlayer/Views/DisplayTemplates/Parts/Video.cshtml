@using System.Web.Mvc.Html
@{
    Style.Require("MediaPlayer");
    Script.Require("jPlayerPlaylist");
    string id = DateTime.Now.Ticks.ToString();
}
@model Orchard.jPlayer.ViewModels.MediaGalleryViewModel
<script type="text/javascript">
    $(document).ready(function () {
        @Model.MediaGalleryType.Javascript(Model.Medias, Model.AutoPlay, Url.Content("~/Modules/Orchard.jPlayer/Content/Swf/"), id)
    });
</script>
<div class="jp-video jp-video-270p">
    <div class="jp-type-playlist">
        <div id="@string.Format("jquery_jplayer_{0}", id)" class="jp-jplayer">
        </div>
        <div id="@string.Format("jp_interface_{0}", id)" class="jp-interface">
            <div class="jp-video-play">
            </div>
            <ul class="jp-controls">
                <li><a href="#" class="jp-play" tabindex="1">play</a></li>
                <li><a href="#" class="jp-pause" tabindex="1">pause</a></li>
                <li><a href="#" class="jp-stop" tabindex="1">stop</a></li>
                <li><a href="#" class="jp-mute" tabindex="1">mute</a></li>
                <li><a href="#" class="jp-unmute" tabindex="1">unmute</a></li>
                <li><a href="#" class="jp-previous" tabindex="1">previous</a></li>
                <li><a href="#" class="jp-next" tabindex="1">next</a></li>
            </ul>
            <div class="jp-progress">
                <div class="jp-seek-bar">
                    <div class="jp-play-bar">
                    </div>
                </div>
            </div>
            <div class="jp-volume-bar">
                <div class="jp-volume-bar-value">
                </div>
            </div>
            <div class="jp-current-time">
            </div>
            <div class="jp-duration">
            </div>
        </div>
        <div id="@string.Format("jp_playlist_{0}", id)" class="jp-playlist">
            <ul>
            </ul>
        </div>
    </div>
</div>